" Set Leader Key to Space
let g:mapleader = "\<Space>"

" Syntax Highlighting On
syntax on

" Encoding
set encoding=utf-8

" Appearance
set background=dark
set showtabline=2

" Cursor Settings
set number
set relativenumber
set ruler	
set cursorline

" Tabstop and Indention
set tabstop=2
set shiftwidth=2
set smarttab
set expandtab
set autoindent

" File Settings
set nobackup
set nowritebackup

" Clipboard
set clipboard=unnamedplus
