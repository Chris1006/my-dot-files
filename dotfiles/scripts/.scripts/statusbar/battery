#/bin/bash

battery_capacity=`cat /sys/class/power_supply/BAT0/capacity`

show_full() {
  echo "âš¡100% [FULL]"
}

show_unknown() {
  echo ""
}

status=`cat /sys/class/power_supply/BAT0/status`

case $status in
  Charging)
    acpi | sed s/,//g | awk '{ printf "%s [%s]\n", $4, $5}'
    ;;  
  Discharging)
    acpi | sed s/,//g | awk '{ printf "%s [%s]\n", $4, $5}'
    ;;
  Full)
    show_full
    ;;
  *)
    show_unknown
    ;;
esac
