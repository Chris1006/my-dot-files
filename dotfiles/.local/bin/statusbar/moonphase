#!/bin/sh

mnphs=$(pom | grep -io 'new\|waxing crescent\|first quarter\|waxing gibbous\|full\|waning gibbous\|last quarter\|waning crescent' | grep -m1 '.')
prcnt=$(pom | grep -o '..%')

case $mnphs in
  	"New") icon="" ;;
	"Waxing Crescent") icon="" ;;
  	"First Quarter") icon="" ;;
    "Waxing Gibbous") icon="" ;;
  	"Waning Gibbous") icon="" ;;
  	"Last Quarter") icon="" ;;
  	"Waning Crescent") icon="" ;;
    "Full") icon="🌕" ;;
	  *) echo errorrrr ;;
esac

printf "%s %s\\n" "$icon" "$prcnt"
