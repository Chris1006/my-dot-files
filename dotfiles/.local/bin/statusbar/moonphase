#!/bin/sh

mnphs=$(pom | grep -io 'new\|waxing crescent\|first quarter\|waxing gibbous\|full\|waning gibbous\|last quarter\|waning crescent' | grep -m1 '.')
prcnt=$(pom | grep -o '..%')

case $mnphs in
  	"New") icon="ðŸŒ‘" ;;
	"Waxing Cresent") icon="ðŸŒ’" ;;
  	"First Quarter") icon="ðŸŒ“" ;;
    "Waxing Gibbous") icon="ðŸŒ”" ;;
  	"Waning Gibbous") icon="ðŸŒ–" ;;
  	"Last Quarter") icon="ðŸŒ—" ;;
  	"Waning Crescent") icon="ðŸŒ˜" ;;
    "Full") icon="ðŸŒ•" ;;
	  *) echo errorrrr ;;
esac

printf "%s %s\\n" "$icon" "$prcnt"
