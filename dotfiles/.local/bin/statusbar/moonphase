#!/bin/sh

mnphs=$(pom | grep -io 'new\|waxing crescent\|first quarter\|waxing gibbous\|full\|waning gibbous\|last quarter\|waning crescent' | grep -m1 '.')
prcnt=$(pom | grep -o '..%')

case $mnphs in
  	"New") icon="î£" ;;
	"Waxing Crescent") icon="îŠ" ;;
  	"First Quarter") icon="î" ;;
    "Waxing Gibbous") icon="î‘" ;;
  	"Waning Gibbous") icon="î˜" ;;
  	"Last Quarter") icon="îœ" ;;
  	"Waning Crescent") icon="îŸ" ;;
    "Full") icon="ğŸŒ•" ;;
	  *) echo errorrrr ;;
esac

printf "%s %s\\n" "$icon" "$prcnt"
