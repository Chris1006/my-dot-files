#!/bin/sh

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
esac

case "$(cat /sys/class/net/wlp58s0/operstate 2>/dev/null)" in
    down) 
        wifiicon="睊" ;;
    up) wifiicon="$(awk '/^\s*w/ { print "", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

wifi_icon="$(echo $wifiicon | head -n 1)"

printf "%s%s\n" "$wifi_icon " "$(sed "s/down//;s/up//" /sys/class/net/e*/operstate 2>/dev/null)"

