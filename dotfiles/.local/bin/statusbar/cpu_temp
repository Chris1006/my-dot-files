#!/bin/sh

print_temp_table() {
  for sensorname in /sys/class/thermal/thermal_zone*; do
    sens_type=`cat $sensorname/type`
    sens_temp=`cat $sensorname/temp`

    echo "$sens_type $sens_temp"
  done
}

cpu_temp=`print_temp_table   |  sed 's/\(.\)..$/.\1Â°C/' | awk '{print $2}' | head -n1`

echo "$cpu_temp"
