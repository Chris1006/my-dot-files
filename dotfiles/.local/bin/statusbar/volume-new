#!/bin/sh

muted=`pactl list sinks | awk '/Stumm/{print $2}'`
volume=`pactl list sinks | awk '/\sLautstärke/{printf "%s", $5}' | sed 's/\%//g'`

icon_muted='婢'
icon_off=''
icon_low='奔'
icon_normal='墳'
icon_high=''

if [ $muted != 'nein' ];
then
    echo "$icon_muted $volume%"
elif [ $volume -eq 0 ];
then
    echo "$icon_off $volume%"
elif [ $volume -lt 33 ];
then
    echo "$icon_low $volume%"
elif [ $volume -lt 66 ];
then
    echo "$icon_normal $volume%"
else
    echo "$icon_high $volume%"
fi

case $BLOCK_BUTTON in
  1) pavucontrol ;;
esac

